<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragAppDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanessa.myapplication.Fragments.AppointmentDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_infoAppointment"
        android:layout_width="309dp"
        android:layout_height="65dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:fontFamily="sans-serif"
        android:text="@string/hello_blank_fragment"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/md_blue_grey_800"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameAppointment" />

    <Button
        android:id="@+id/btnAppEdit"
        android:layout_width="134dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="36dp"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAppDelete"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="56dp"
        android:onClick="onClick"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/btnAppEdit" />

    <TextView
        android:id="@+id/txtNameAppointment"
        android:layout_width="241dp"
        android:layout_height="30dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif"
        android:text="12 de Abril"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/md_blue_grey_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_account_circle_black_24px"
        app:layout_constraintBottom_toTopOf="@+id/txt_infoAppointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="249dp"
        android:layout_height="224dp"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_maps_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_infoAppointment"
        app:layout_constraintVertical_bias="0.048" />

</android.support.constraint.ConstraintLayout>
