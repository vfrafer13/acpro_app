<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragEventDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanessa.myapplication.Fragments.EventDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtEventDesc"
        android:layout_width="309dp"
        android:layout_height="65dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="36dp"
        android:fontFamily="sans-serif"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/md_blue_grey_800"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNameEvent" />

    <Button
        android:id="@+id/btnEventEdit"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="56dp"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEventDelete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEventDelete"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="6dp"
        android:onClick="onClick"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEventEdit" />

    <TextView
        android:id="@+id/txtNameEvent"
        android:layout_width="241dp"
        android:layout_height="30dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/md_blue_grey_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewMaps"
        android:layout_width="249dp"
        android:layout_height="224dp"
        android:layout_marginBottom="230dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_maps_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEventDesc" />

</android.support.constraint.ConstraintLayout>
