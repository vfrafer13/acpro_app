<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanessa.myapplication.ShareFacebook">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_share"
        android:layout_width="433dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearshare"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_share">

        <Button
            android:id="@+id/btnShare"
            android:layout_width="119dp"
            android:layout_height="50dp"
            android:layout_marginBottom="200dp"
            android:layout_marginEnd="134dp"
            android:layout_marginStart="134dp"
            android:onClick="onClick"
            android:text="Enviar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTxtShare"
            android:layout_width="305dp"
            android:layout_height="108dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:hint="Escribe tu estado aquÃ­"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewShare" />

        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="239dp"
            android:layout_height="43dp"
            android:layout_marginEnd="111dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="26dp"
            android:fontFamily="sans-serif"
            android:text="Compartir en Facebook"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/md_blue_grey_800"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
