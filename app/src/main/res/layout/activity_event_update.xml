<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vanessa.myapplication.EventUpdate">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_event_update"
        android:layout_width="390dp"
        android:layout_height="61dp"
        android:layout_marginTop="23dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearEvent2"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_event_update">

        <Button
            android:id="@+id/updateSaveNewEvent"
            android:layout_width="119dp"
            android:layout_height="50dp"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="134dp"
            android:layout_marginStart="134dp"
            android:onClick="onClick"
            android:text="Guardar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/updateTxtEventName"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:hint="Nombre"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="239dp"
            android:layout_height="43dp"
            android:layout_marginEnd="111dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="26dp"
            android:fontFamily="sans-serif"
            android:text="Editar Evento"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/md_blue_grey_800"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/updateTxtEventAddress"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:hint="DirecciÃ³n"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateTxtEventName" />

        <EditText
            android:id="@+id/updateTxtEventType"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:hint="Tipo"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateTxtEventAddress" />

        <EditText
            android:id="@+id/editTxtEditEvDate"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Hora"
            android:inputType="time"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateTxtEventType" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>

